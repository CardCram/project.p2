@model CardCram.Client.Models.DeckViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Your Card</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="create" asp-controller="card" asp-antiforgery="true" method="GET">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="NewCard.DeckId" value="@ViewBag.DeckId"/>
            </div>
            <div class="form-group">
                <label asp-for="NewCard.Question" class="control-label"></label>
                <input asp-for="NewCard.Question" class="form-control"/>
                <span asp-validation-for="NewCard.Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewCard.Answer" class="control-label"></label>
                <input asp-for="NewCard.Answer" class="control-label"/>
                <span asp-validation-for="NewCard.Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit">Create Card</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" asp-route-id="@ViewBag.DeckId"> Back To Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}